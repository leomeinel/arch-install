# Fail on error
set -e

# Define functions
log_err() {
    /usr/bin/logger -s -p local0.err <<<"'$(basename "${0}"):' ${*}"
}

# If current user is not UID 1000, don't do anything
if [[ "${UID}" -ne 1000 ]]; then
    log_err "You can only run this script as UID 1000."
    exit 1
fi

# Upgrade paru
/usr/bin/paru

# Upgrade flatpak
exec /usr/bin/doas /usr/bin/flatpak --system update
